<h3>
  {{localize 'AZS.pc.sheet.backpack.header'}}
</h3>
<div class='plecak-partial'>
  <div class='odstepdol padding-lewo'>
    <i class='fa-regular fa-plus'></i>
    <a
      class='item-create'
      data-type='bron'
      title='{{localize "AZS.pc.sheet.backpack.add.item"}}'
    >
      <i class='fa-regular fa-sword'></i>
    </a>
    <a
      class='item-create'
      data-type='zbroja'
      title='{{localize "AZS.pc.sheet.backpack.add.item"}}'
    >
      <i class='fa-regular fa-shield'></i>
    </a>
    <a
      class='item-create'
      data-type='tom'
      title='{{localize "AZS.pc.sheet.backpack.add.item"}}'
    >
      <i class='fa-regular fa-book'></i>
    </a>
    <a
      class='item-create'
      data-type='ogolne'
      title='{{localize "AZS.pc.sheet.backpack.add.item"}}'
    >
      <i class='fa-regular fa-sack'></i>
    </a>
  </div>
  <section class='lista-przedmiotow'>
    {{#each itemy as |item|}}
      <div class='item padding-lewo' data-item-id='{{id}}'>
        <a class='item-edit'>{{name}}</a>
        <a class='item-delete'>
          <i class='fa-regular fa-xmark'></i>
        </a>
      </div>
    {{/each}}
  </section>
  <div style='display: grid;grid-template-columns: 1fr 1fr;'>
    <div class='opis' style='text-align:left; padding-left: 5px;'>
      {{localize 'AZS.pc.sheet.backpack.slots'}}:
      <input
        class='input-zloto'
        name='system.sloty'
        type='text'
        value='{{actor.system.sloty}}'
        data-dtype='Number'
      />
    </div>
    <div
      class='padding-lewo opis ramkaGora'
      style='text-align: right; padding-right: 5px;'
    >
      <i class='fa-regular fa-coin'></i>
      :
      <input
        class='input-zloto'
        name='system.zloto'
        type='text'
        value='{{actor.system.zloto}}'
        data-dtype='Number'
      />
    </div>
  </div>
</div>
