<h3>Plecak</h3>
<div class='plecak_partial'>
  <div class='odstepdol paddingLewo'>
    <i class='fa-regular fa-plus'></i>
    <a
      class='item-create'
      data-type='bron'
      title='{{localize "AZS.kartaPostaci.dodajPrzedmiot"}}'
    >
      <i class='fa-regular fa-sword'></i>
    </a>
    <a
      class='item-create'
      data-type='zbroja'
      title='{{localize "AZS.kartaPostaci.dodajPrzedmiot"}}'
    >
      <i class='fa-regular fa-shield'></i>
    </a>
    <a
      class='item-create'
      data-type='tom'
      title='{{localize "AZS.kartaPostaci.dodajPrzedmiot"}}'
    >
      <i class='fa-regular fa-book'></i>
    </a>
    <a
      class='item-create'
      data-type='ogolne'
      title='{{localize "AZS.kartaPostaci.dodajPrzedmiot"}}'
    >
      <i class='fa-regular fa-sack'></i>
    </a>
  </div>
  <section class='lista-przedmiotow'>
    {{#each itemy as |item|}}
      <div class='item paddingLewo' data-item-id='{{id}}'>
        <a class='item-edit'>{{name}}</a>
        <a class='item-delete'>
          <i class='fa-regular fa-xmark'></i>
        </a>
      </div>
    {{/each}}
  </section>
  <div style='display: grid;grid-template-columns: 1fr 1fr;'>
    <div class='opis' style='text-align:left; padding-left: 5px;'>
      Sloty:
      <input
        class='inputZloto'
        name='system.sloty'
        type='text'
        value='{{actor.system.sloty}}'
        data-dtype='Number'
      />
    </div>
    <div
      class='paddingLewo opis ramkaGora'
      style='text-align: right; padding-right: 5px;'
    >
      <i class='fa-regular fa-coin'></i>
      :
      <input
        class='inputZloto'
        name='system.zloto'
        type='text'
        value='{{actor.system.zloto}}'
        data-dtype='Number'
      />
    </div>
  </div>
</div>