{
  "name": "advanced-zabic-smoka",
  "version": "1.0.9",
  "scripts": {
    "test": "npx jest --watch --notify",
    "test:ci": "npx jest",
    "styles": "npx sass src/styles/main.scss AZS.css",
    "watch:styles": "npm run styles -- --watch",
    "build:styles": "npm run lint:styles && npm run styles",
    "lint": "npm run lint:code && npm run lint:styles && npm run format",
    "lint:code": "npx eslint module --fix",
    "lint:styles": "npx stylelint \"src/styles/**/*.scss\" --fix",
    "format": "npx prettier --write .",
    "lint:ci": "npm run lint:code:ci && npm run lint:styles:ci",
    "lint:code:ci": "npx eslint module --fix",
    "lint:styles:ci": "npx stylelint \"**/*.less\" --fix"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.5",
    "babel-jest": "^29.5.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "node-notifier": "^10.0.1",
    "prettier": "2.8.8",
    "sass": "^1.62.1",
    "stylelint": "^15.6.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0"
  }
}
